{
  "compilerOptions": {
    "strict": true,
    "lib": ["DOM"],
    "isolatedModules": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["node", "jest"],
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "allowJs": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "src/index.ts",
    "src/interfaces.ts",
  ],
  "exclude": [
    "src/*.test.ts",
    "node_modules",
    "dist"
  ]
}
